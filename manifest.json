{
  "manifest_version": 3,
  "name": "Stream Scout",
  "version": "0.3.0",

  "action": {
    "default_popup": "popup.html"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "sw.js"
  },

  "omnibox": {
    "keyword": "ss"
  },

  "permissions": ["storage", "contextMenus", "notifications", "omnibox", "tabs"],

  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.imdb.com/*",
    "https://*.tmdb.org/*",
    "https://*.netflix.com/*",
    "https://*.hulu.com/*",
    "https://*.primevideo.com/*",
    "https://*.disneyplus.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.imdb.com/*"],
      "js": ["content/fallback-panel.js"],
      "css": ["content/fallback-panel.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "sidepanel.css",
        "sidepanel.js",
        "popup.css",
        "popup.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "128": "assets/icons/128.png"
  }
}
